@{
    ViewData["Title"] = "Đặt hàng thành công";
}

<div class="text-center py-5">
    <div class="mb-4">
        <i class="fas fa-check-circle fa-5x text-success"></i>
    </div>
    <h2 class="text-success">Đặt hàng thành công!</h2>
    <p class="lead">Cảm ơn bạn đã đặt hàng tại Thanh My Milk Tea</p>

    <div class="card mx-auto" style="max-width: 400px;">
        <div class="card-body">
            <h5>Thông tin đơn hàng</h5>
            <p class="mb-1"><strong>Mã đơn hàng:</strong> @ViewBag.MaHD</p>
            <p class="mb-1"><strong>Thời gian:</strong> @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
            <p class="text-muted">Đơn hàng của bạn đang được xử lý</p>
        </div>
    </div>

    <div class="mt-4">
        <a class="btn btn-primary me-2" asp-controller="Home" asp-action="Index">
            <i class="fas fa-home"></i> Về trang chủ
        </a>
        <a class="btn btn-outline-primary" asp-controller="DonHang" asp-action="Index">
            <i class="fas fa-list"></i> Xem đơn hàng
        </a>
    </div>
</div>