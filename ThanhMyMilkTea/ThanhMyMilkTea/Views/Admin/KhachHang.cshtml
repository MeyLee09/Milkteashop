@model List<KhachHang>
@{
    ViewData["Title"] = "Quản lý khách hàng";
    Layout = "_AdminLayout";
}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Quản lý khách hàng</h1>
</div>
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Mã KH</th>
                        <th>Tên khách hàng</th>
                        <th>Email</th>
                        <th>Điện thoại</th>
                        <th>Ngày đăng ký</th>
                        <th>Điểm tích lũy</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MaKh</td>
                            <td>@item.TenKh</td>
                            <td>@item.Email</td>
                            <td>@item.Sdt</td>
                            <td>@item.NgayDangKy?.ToString("dd/MM/yyyy")</td>
                            <td>@item.DiemTichLuy điểm</td>
                            <td>
                                @if (item.TrangThai == true)
                                {
                                    <span class="badge bg-success">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Bị khóa</span>
                                }
                            </td>
                            <td>
                                <a class="btn btn-warning btn-sm" asp-action="ToggleKhachHang" asp-route-id="@item.MaKh"
                                   onclick="return confirm('Bạn có chắc muốn thay đổi trạng thái?')">
                                    @if (item.TrangThai == true)
                                    {
                                        <i class="fas fa-lock"></i>
                                        <text>Khóa</text>
                                    }
                                    else
                                    {
                                        <i class="fas fa-unlock"></i>
                                        <text>Mở khóa</text>
                                    }
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (ViewBag.TotalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                            <a class="page-link" asp-action="KhachHang" asp-route-page="@i">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>
</div>