@model List<HoaDon>
@{
    ViewData["Title"] = "Quản lý đơn hàng";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Quản lý đơn hàng</h1>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Mã đơn hàng</th>
                        <th>Ngày đặt</th>
                        <th>Khách hàng</th>
                        <th>Nhân viên</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MaHd</td>
                            <td>@item.NgayLap?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@item.MaKhNavigation?.TenKh</td>
                            <td>@item.MaNvNavigation?.TenNv</td>
                            <td>@item.ThanhTien?.ToString("N0") VNĐ</td>
                            <td>
                                @{
                                    string badgeClass = item.TrangThaiDonHang switch
                                    {
                                        "Chờ xác nhận" => "bg-warning",
                                        "Đã xác nhận" => "bg-info",
                                        "Đang giao" => "bg-primary",
                                        "Đã giao" => "bg-success",
                                        "Đã hủy" => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @badgeClass">@item.TrangThaiDonHang</span>
                            </td>
                            <td>
                                <a class="btn btn-info btn-sm" asp-action="DonHangDetails" asp-route-id="@item.MaHd">
                                    <i class="fas fa-eye"></i>
                                </a>
                                @if (item.TrangThaiDonHang == "Chờ xác nhận")
                                {
                                    <form method="post" asp-action="UpdateDonHang" class="d-inline">
                                        <input type="hidden" name="maHD" value="@item.MaHd">
                                        <input type="hidden" name="trangThai" value="Đã xác nhận">
                                        <button type="submit" class="btn btn-success btn-sm"
                                                onclick="return confirm('Xác nhận duyệt đơn hàng?')">
                                            <i class="fas fa-check"></i>
                                        </button>
                                    </form>
                                    <form method="post" asp-action="UpdateDonHang" class="d-inline">
                                        <input type="hidden" name="maHD" value="@item.MaHd">
                                        <input type="hidden" name="trangThai" value="Đã hủy">
                                        <button type="submit" class="btn btn-danger btn-sm"
                                                onclick="return confirm('Xác nhận hủy đơn hàng?')">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </form>
                                }
                                @if (item.TrangThaiDonHang == "Đã xác nhận")
                                {
                                    <form method="post" asp-action="UpdateDonHang" class="d-inline">
                                        <input type="hidden" name="maHD" value="@item.MaHd">
                                        <input type="hidden" name="trangThai" value="Đang giao">
                                        <button type="submit" class="btn btn-primary btn-sm">
                                            <i class="fas fa-shipping-fast"></i>
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (ViewBag.TotalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                            <a class="page-link" asp-action="DonHang" asp-route-page="@i">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>
</div>