@model List<DanhMucSp>
@{
    ViewData["Title"] = "Quản lý danh mục";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Quản lý danh mục sản phẩm</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a class="btn btn-primary" asp-action="CreateDanhMuc">
            <i class="fas fa-plus"></i> Thêm danh mục
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Mã danh mục</th>
                        <th>Tên danh mục</th>
                        <th>Mô tả</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MaDanhMuc</td>
                            <td>@item.TenDanhMuc</td>
                            <td>@item.MoTa</td>
                            <td>
                                @if (item.TrangThai == true)
                                {
                                    <span class="badge bg-success">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Ngừng hoạt động</span>
                                }
                            </td>
                            <td>
                                <a class="btn btn-primary btn-sm" asp-action="EditDanhMuc" asp-route-id="@item.MaDanhMuc">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a class="btn btn-warning btn-sm" asp-action="ToggleDanhMuc" asp-route-id="@item.MaDanhMuc"
                                   onclick="return confirm('Bạn có chắc muốn thay đổi trạng thái?')">
                                    @if (item.TrangThai == true)
                                    {
                                        <i class="fas fa-eye-slash"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-eye"></i>
                                    }
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (ViewBag.TotalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                            <a class="page-link" asp-action="DanhMuc" asp-route-page="@i">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>
</div>