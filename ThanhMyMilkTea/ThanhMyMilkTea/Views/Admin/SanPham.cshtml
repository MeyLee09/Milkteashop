@model List<SanPham>
@{
    ViewData["Title"] = "Quản lý sản phẩm";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Quản lý sản phẩm</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a class="btn btn-primary" asp-action="CreateSanPham">
            <i class="fas fa-plus"></i> Thêm sản phẩm
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <!-- Search Form -->
        <div class="row mb-3">
            <div class="col-md-4">
                <form method="get" class="d-flex">
                    <input type="text" class="form-control me-2" name="search"
                           placeholder="Tìm kiếm sản phẩm..." value="@ViewBag.Search">
                    <button class="btn btn-outline-primary" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </form>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Hình ảnh</th>
                        <th>Mã SP</th>
                        <th>Tên sản phẩm</th>
                        <th>Danh mục</th>
                        <th>Giá</th>
                        <th>Tồn kho</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div style="width: 60px; height: 60px; background: #f8f9fa; border-radius: 8px; display: flex; align-items: center; justify-content: center; overflow: hidden; border: 1px solid #dee2e6;">
                                    @if (!string.IsNullOrEmpty(item.HinhAnh))
                                    {
                                        <img src="~/images/products/@item.HinhAnh" alt="@item.TenSp"
                                             style="width: 100%; height: 100%; object-fit: cover;"
                                             onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                                        <div style="display: none; color: #6c757d; font-size: 1.5rem;">
                                            <i class="fas fa-coffee"></i>
                                        </div>
                                    }
                                    else
                                    {
                                        <div style="color: #6c757d; font-size: 1.5rem;">
                                            <i class="fas fa-coffee"></i>
                                        </div>
                                    }
                                </div>
                            </td>
                            <td>
                                <small class="text-muted">@item.MaSp</small>
                            </td>
                            <td>
                                <div>
                                    <strong>@item.TenSp</strong>
                                    @if (!string.IsNullOrEmpty(item.MoTa))
                                    {
                                        <br>

                                        <small class="text-muted">@(item.MoTa.Length > 50 ? item.MoTa.Substring(0, 50) + "..." : item.MoTa)</small>
                                    }
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-info">@item.MaDanhMucNavigation?.TenDanhMuc</span>
                            </td>
                            <td>
                                <strong class="text-primary">@item.Gia.ToString("N0") VNĐ</strong>
                            </td>
                            <td>
                                @if (item.SoLuongTon > 10)
                                {
                                    <span class="badge bg-success">@item.SoLuongTon</span>
                                }
                                else if (item.SoLuongTon > 0)
                                {
                                    <span class="badge bg-warning">@item.SoLuongTon</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Hết hàng</span>
                                }
                            </td>
                            <td>
                                @if (item.TrangThai == true)
                                {
                                    <span class="badge bg-success">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Ngừng bán</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a class="btn btn-primary btn-sm" asp-action="EditSanPham" asp-route-id="@item.MaSp" title="Sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a class="btn btn-warning btn-sm" asp-action="ToggleSanPham" asp-route-id="@item.MaSp" title="@(item.TrangThai == true ? "Ẩn sản phẩm" : "Hiện sản phẩm")"
                                       onclick="return confirm('Bạn có chắc muốn thay đổi trạng thái?')">
                                        @if (item.TrangThai == true)
                                        {
                                            <i class="fas fa-eye-slash"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-eye"></i>
                                        }
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (ViewBag.TotalPages > 1)
        {
            <nav aria-label="Page navigation" class="mt-3">
                <ul class="pagination justify-content-center">
                    @if (ViewBag.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="SanPham" asp-route-page="@(ViewBag.CurrentPage - 1)" asp-route-search="@ViewBag.Search">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        </li>
                    }

                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                            <a class="page-link" asp-action="SanPham" asp-route-page="@i" asp-route-search="@ViewBag.Search">@i</a>
                        </li>
                    }

                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="SanPham" asp-route-page="@(ViewBag.CurrentPage + 1)" asp-route-search="@ViewBag.Search">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }

        @if (!Model.Any())
        {
            <div class="text-center py-4">
                <i class="fas fa-coffee fa-4x text-muted mb-3"></i>
                <h5 class="text-muted">Không có sản phẩm nào</h5>
                <p class="text-muted">
                    @if (!string.IsNullOrEmpty(ViewBag.Search))
                    {
                        <span>Không tìm thấy sản phẩm với từ khóa "@ViewBag.Search"</span>
                    }
                    else
                    {
                        <span>Hãy thêm sản phẩm đầu tiên</span>
                    }
                </p>
            </div>
        }
    </div>
</div>