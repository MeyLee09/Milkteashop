@model List<HoaDon>
@{
    ViewData["Title"] = "Quản lý giao hàng";
    Layout = "_AdminLayout";
}

<h2><i class="fas fa-shipping-fast"></i> Quản lý giao hàng</h2>
<p class="text-muted">Danh sách các đơn hàng cần giao và xác nhận</p>

@if (Model.Count == 0)
{
    <div class="text-center py-5">
        <i class="fas fa-truck fa-5x text-muted mb-3"></i>
        <h4>Không có đơn hàng nào cần giao</h4>
        <p class="text-muted">Hiện tại không có đơn hàng nào trong trạng thái cần giao</p>
    </div>
}
else
{
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Mã đơn hàng</th>
                            <th>Ngày đặt</th>
                            <th>Khách hàng</th>
                            <th>Địa chỉ</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MaHd</td>
                                <td>@item.NgayLap?.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@item.MaKhNavigation?.TenKh</td>
                                <td>@item.MaKhNavigation?.DiaChi</td>
                                <td>@item.ThanhTien?.ToString("N0") VNĐ</td>
                                <td>
                                    @{
                                        string badgeClass = item.TrangThaiDonHang switch
                                        {
                                            "Đã xác nhận" => "bg-info",
                                            "Đang giao" => "bg-primary",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @badgeClass">@item.TrangThaiDonHang</span>
                                </td>
                                <td>
                                    @if (item.TrangThaiDonHang == "Đang giao")
                                    {
                                        <form method="post" asp-action="XacNhanGiaoDon" class="d-inline">
                                            <input type="hidden" name="maHD" value="@item.MaHd">
                                            <button type="submit" class="btn btn-success btn-sm"
                                                    onclick="return confirm('Xác nhận đã giao đơn hàng này?')">
                                                <i class="fas fa-check"></i> Đã giao
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chờ giao hàng</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (ViewBag.TotalPages > 1)
            {
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                                <a class="page-link" asp-action="DonHang" asp-route-page="@i">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
}