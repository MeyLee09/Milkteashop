
@{
    ViewData["Title"] = "Đăng nhập";
}

<style>
    .auth-container {
        min-height: 60vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 0;
    }

    .auth-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(139, 69, 19, 0.15);
        border: none;
        overflow: hidden;
        transition: all 0.3s ease;
    }

        .auth-card:hover {
            box-shadow: 0 15px 50px rgba(139, 69, 19, 0.25);
            transform: translateY(-5px);
        }

    .auth-header {
        background: linear-gradient(135deg, var(--primary), #A0522D);
        color: white;
        padding: 2rem;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

        .auth-header::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
            animation: shimmer 3s infinite;
        }

    @@keyframes shimmer {
        0%, 100%

    {
        transform: rotate(0deg);
    }

    50% {
        transform: rotate(180deg);
    }

    }

    .auth-header h4 {
        margin: 0;
        font-weight: 700;
        position: relative;
        z-index: 2;
    }

    .auth-header i {
        font-size: 1.5rem;
        margin-right: 0.5rem;
        color: var(--accent);
    }

    .auth-body {
        padding: 2.5rem;
    }

    .form-label {
        font-weight: 600;
        color: var(--dark);
        margin-bottom: 0.5rem;
    }

    .input-group {
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
        margin-bottom: 1.5rem;
        transition: all 0.3s ease;
    }

        .input-group:focus-within {
            box-shadow: 0 5px 15px rgba(139, 69, 19, 0.2);
            transform: translateY(-2px);
        }

    .input-group-text {
        background: linear-gradient(135deg, var(--primary), #A0522D);
        color: white;
        border: none;
        font-weight: 600;
        width: 50px;
        justify-content: center;
    }

    .form-control {
        border: none;
        padding: 0.8rem 1rem;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            box-shadow: none;
            border: none;
            background: #f8f9fa;
        }

    .btn-auth {
        background: linear-gradient(135deg, var(--primary), #A0522D);
        border: none;
        border-radius: 15px;
        padding: 0.8rem 2rem;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .btn-auth::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            transition: left 0.5s;
        }

        .btn-auth:hover::before {
            left: 100%;
        }

        .btn-auth:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(139, 69, 19, 0.3);
        }

    .auth-footer {
        background: var(--light);
        padding: 1.5rem;
        text-align: center;
        border: none;
    }

        .auth-footer a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .auth-footer a:hover {
                color: #A0522D;
                text-decoration: underline;
            }

    .alert {
        border-radius: 15px;
        border: none;
        padding: 1rem 1.5rem;
        margin-bottom: 1.5rem;
        animation: slideIn 0.5s ease;
    }

    @@keyframes slideIn {
        from

    {
        opacity: 0;
        transform: translateY(-20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .alert-danger {
        background: linear-gradient(135deg, #dc3545, #c82333);
        color: white;
    }

    .alert-success {
        background: linear-gradient(135deg, #28a745, #20c997);
        color: white;
    }

    .brand-logo {
        text-align: center;
        margin-bottom: 2rem;
    }

        .brand-logo i {
            font-size: 3rem;
            color: var(--primary);
            margin-bottom: 0.5rem;
            animation: pulse 2s infinite;
        }

    @@keyframes pulse {
        0%, 100%

    {
        transform: scale(1);
    }

    50% {
        transform: scale(1.05);
    }

    }

    .brand-logo h2 {
        color: var(--primary);
        font-weight: 700;
        margin: 0;
    }

    @@media (max-width: 768px) {
        .auth-container

    {
        padding: 1rem;
    }

    .auth-body {
        padding: 1.5rem;
    }

    .auth-header {
        padding: 1.5rem;
    }

    }
</style>

<div class="auth-container">
    <div class="col-md-5 col-lg-4">
        <!-- Brand Logo -->
        <div class="brand-logo">
            <i class="fas fa-coffee"></i>
            <h2>Thanh My</h2>
            <p class="text-muted">Milk Tea</p>
        </div>

        <div class="card auth-card">
            <div class="auth-header">
                <h4><i class="fas fa-sign-in-alt"></i> Đăng nhập</h4>
            </div>
            <div class="auth-body">
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i> @ViewBag.Error
                    </div>
                }
                @if (ViewBag.Success != null)
                {
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle me-2"></i> @ViewBag.Success
                    </div>
                }

                <form method="post" id="loginForm">
                    <div class="mb-3">
                        <label class="form-label">Tên đăng nhập</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            <input type="text" class="form-control" name="username" required
                                   placeholder="Nhập tên đăng nhập">
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Mật khẩu</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input type="password" class="form-control" name="password" required
                                   placeholder="Nhập mật khẩu">
                        </div>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-auth">
                            <i class="fas fa-sign-in-alt me-2"></i> Đăng nhập
                        </button>
                    </div>
                </form>
            </div>
            <div class="auth-footer">
                <p class="mb-0">Chưa có tài khoản? <a asp-action="Register">Đăng ký ngay</a></p>
            </div>
        </div>
    </div>
</div>